<% if author.errors.any? %>
<% author.errors.each do |error| %>
<p> <%= error.full_message %></p>
<% end %>

<% end %>

<%= form_with model: author do |form| %>

<%= form.label :name %>
<%= form.text_field :name %>

<%= form.label :address %>
<%= form.text_field :address %>

<%= form.label :Verified %>
<%= form.check_box :is_verified %>

<%= form.label :Date_Verified %>
<%= form.date_field :date %>

<%= form.submit %>

<% end %>